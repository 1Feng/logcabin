import os

opts = Variables('../../Local.sc')

opts.AddVariables(
    ("CC", "C Compiler"),
    ("CXX", "C++ Compiler"),
    ("AS", "Assembler"),
    ("LINK", "Linker"),
)

env = Environment(options = opts, tools = ['default'], ENV = os.environ)

src = [
    "DLogRPC.cc",
]
env.StaticLibrary("DLogRPC",
                  src,
                  CPPPATH = [ "#include" ],
                  CPPFLAGS = [ "-g", "-std=c++0x" ])

